  "include": ["ui/**/*.spec.ts", "ui/**/*.spec.tsx", "ui/**/*.test.ts", "ui/**/*.test.tsx", "packages/**/*.test.ts", "packages/**/*.test.tsx", "jest.setup.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
