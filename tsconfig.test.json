{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "types": ["jest", "node", "@testing-library/jest-dom", "vite/client"]
